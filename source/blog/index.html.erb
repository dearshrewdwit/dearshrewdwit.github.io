<section class='article-summaries'>
  <% page_articles.each_with_index do |article, i| %>
    <article>
      <h2><%= article.date.strftime('%b %-d %Y') %>: <%= link_to article.title, article, class: "title-link" %></h2>
      <%= article.summary(250) %>
    </article>

  <%end%>

  <%if paginate %>
    <% if next_page %>
      <p><%= link_to ’Next page’, next_page %></p>
    <% end %>
  <% end %>
</section>
